page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.detail-container{
  height: 600rpx;
  filter: blur(40rpx);
  opacity: 0.3;
}
.detail-mask{
  position: absolute;
  width: 100%;
  height: 600rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.detail-box{
 position: absolute;
 top:0;
 left:0;
 padding: 10rpx 30rpx;
 width:100%;
 display:flex;
 flex-flow: row nowrap;
 flex: 1 1 auto;
}
.detail-img{
  width: 270rpx;
  height: 385rpx;
  margin-top:40rpx;
}
.detail-info{
  font-size: 32rpx;
  line-height: 50rpx;
  padding: 15px;
  color: #fff;
}
.detail-name{
  font-size: 45rpx;
  font-weight:bolder;
}
.detail-rating{
  color:#FFD700;
  font-weight:bolder;
}
.castname{
  margin-left:80rpx;
  color: rgba(255, 255, 255,0.6);
}
.detail-summary,.review{
  margin-top: 40rpx;
  width: 94%;
  padding: 3%;
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.tag{
  display: inline-block;
  margin: 10rpx;
}
.review-author{
  color: blue;
  font-size: 30rpx;
  line-height: 80rpx;
}
.commentbtn{
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}
/*弹出层*/
.contentbox{
  width: 100%;
  background: #f6f6f6;
  border: 1px solid rgba(0, 0, 0, 0.1);
}
.commenttitle{
 font-size: 40rpx;
  line-height: 100rpx;
  color: #666;
  text-align: center;
}
.btnbox{
  width: 100%;
  display:flex;
 flex-flow: row nowrap;
 flex: 1 1 auto;
 margin-top: 30rpx;
 margin-bottom: 30rpx;
 justify-content: flex-end;
}
.ratebox,.imagebox{
  width: 92%;
  padding: 1%;
  margin: 30rpx auto;
  display:flex;
 flex-flow: row nowrap;
 flex: 1 1 auto;
 justify-content: flex-start;
 color: #666;
font-size: 30rpx;
line-height: 70rpx;
}
.btnbox button{
  margin-right: 30rpx;
}
.imagebox image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

