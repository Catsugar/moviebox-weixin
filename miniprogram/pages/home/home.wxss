/* pages/myhome/myhome.wxss */
@import '../index/index.wxss';
.mybox{
 /* background-image: url(../../images/1.jpg);*/
 background-color:rgba(180, 20, 73, 0.8);
 font-size: 32rpx;
  background-size:cover;
  background-position: center center;
  width:100%;
  height: 500rpx;
  position: relative;
  transition:all ease 1s;}
.mybox:hover{
  background-position: top center;
}
.mycover{
  transition:all ease 1s;
  background-color:rgba(40,40,40,0.2);
  width: 100%;
  height:100%;
}
.mybox text{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color:rgba(180,180,180,0.7);
  color:#fff;
  position: absolute;
  bottom: 0;
  font-size: 32rpx;}
.myitem{
  font-size: 32rpx;
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.myname{
  font:bold 80rpx/120rpx "Microsoft Yahei", "微软雅黑";
  color:#fff;
padding-top:80rpx;
  height: 120rpx;
  text-shadow: 1px 1px 1px #000;
  text-align: center;
  z-index: 100}
.btn{
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  font-size: 32rpx;
  color: #fff;
  background-color:rgba(151, 14, 82, 0.397);
  padding: 10rpx;
}