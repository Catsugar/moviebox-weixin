/* pages/myhome/myhome.wxss */
@import '../index/index.wxss';
.mycontainer{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.3;
}
.mymask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color:rgba(255,255,255,0.8);
  top: 0;
  left: 0;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;}
.myinfo{
  font-size: 32rpx;
  background-size:cover;
  width:100%;
  height: 400rpx;
  position: relative;
  transition:all ease 1s;
  display: flex;
  flex-direction: column;
  align-items: center;}
.myinfo:hover{
  background-position: top center;
}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
}
.userinfo-avatar:after {
  border: none;
}
.userinfo-nickname {
  font:bold 80rpx/100rpx "Microsoft Yahei", "微软雅黑";
  color:#fff;
  height: 100rpx;
  text-shadow: 1px 1px 1px #000;
  text-align: center;
  z-index: 100;
  background: none;
}
.userinfo-city{
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #666;
  line-height: 40rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.mycomment{
  font-size: 40rpx;
  color: #666;
  line-height: 100rpx;
  font-weight: bold;
  text-align: center;}
.mylist{
  height: auto;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  min-height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  transition: all 300ms ease;
}
.mylist-text {
  width: 90%;
  line-height:40px;
  font-size: 30rpx;
  color: #666;
  padding: 0 5%;
}
.comment-title{
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  width: 100%;
  display: flex;
  flex-flow:row nowrap;
  justify-content: flex-start;
  align-items:center;

  background-color:rgba(255,255,255,0.9);
}
.mask{
  width: 100%;
  background: #f6f6f6;
}
.comment-img{
  width: 100rpx;
  height: 120rpx;
  margin: 20rpx;
  background-size: cover;
}
.comment-movie{
  font-size: 40rpx;
  color: #666;
  font-weight: bold;
}
/*中间打分*/
.comment-middle{
  display: flex;
  flex-flow:row nowrap;
  justify-content:space-between;
  align-items:center;
}
.mylist-score{
  font-weight:bold;
  display: flex;
  flex-flow:row nowrap;
  justify-content: flex-start;
  align-items:center;
  color: #d00;
}
.mylist-score van-rate{
  margin-bottom: -10rpx;
}
.comment-content{
  text-indent: 50rpx;
}
.imagelist{
 display:flex;
 flex-flow: row wrap;
 justify-content: flex-start;
}
.commentimage{
  width:500rpx;
}
